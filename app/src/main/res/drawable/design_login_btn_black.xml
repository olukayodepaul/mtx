<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/rippleEffectColor">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/order_color" />
            <stroke
                    android:width="3dip"
                    android:color="@color/order_color"/>
            <corners android:radius="3dip" />
            <padding
                    android:bottom="4dip"
                    android:left="4dip"
                    android:right="4dip"
                    android:top="4dip" />
        </shape>
    </item>
</selector>