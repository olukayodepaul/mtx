<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mtx" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseReleaseColor</item>
        <item name="colorPrimaryVariant">@color/baseReleaseColor</item>
        <item name="colorOnPrimary">@color/baseReleaseColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/baseReleaseColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.ITc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WhiteAccent">
        <item name="colorAccent">@color/baseReleaseColor</item>
    </style>

    <style name="inputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"/>

    <style name="myActionButtonStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="TouchableView">
        <item name="android:foreground">@color/white</item>
    </style>

    <style name="Widget.MyApp.Spinner" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/menu_bg</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/bg_black</item>
        <item name="android:textColorSecondary">@color/bg_black</item>
        <item name="background">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="fontFamily">@font/opensanbold</item>
        <item name="android:fontFamily">@font/opensanbold</item>
    </style>


</resources>