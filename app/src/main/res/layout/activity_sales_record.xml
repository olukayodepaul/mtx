<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:orientation="vertical"
tools:context=".ui.salesrecord.SalesRecordActivity">

    <RelativeLayout
        android:id="@+id/component"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="@color/base">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/baseReleaseColor"
            app:title="Purchase Record"
            app:titleTextColor="@color/white"
            android:theme="@style/AppTheme.Toolbar"
            app:subtitleTextAppearance="@font/roboto_light"
            app:subtitleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"/>

        <RelativeLayout
            android:id="@+id/perenthost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/baseReleaseColor"
            android:layout_below="@+id/toolbar">

            <TextView
                android:id="@+id/tv_skus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="SKU Name"
                android:layout_toStartOf="@+id/mt_inventory"
                android:lines="2"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/mt_amount"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:lines="2"
                android:layout_alignParentEnd="true"
                android:gravity="fill_vertical"
                android:text="Amount"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/mt_order"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:lines="2"
                android:layout_toStartOf="@+id/mt_amount"
                android:gravity="fill_vertical"
                android:textAlignment="textEnd"
                android:text="Qty"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/mt_pricing"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:lines="2"
                android:layout_toStartOf="@+id/mt_order"
                android:gravity="fill_vertical"
                android:textAlignment="textEnd"
                android:text="Pricing"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/mt_inventory"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:lines="2"
                android:layout_toStartOf="@+id/mt_pricing"
                android:gravity="fill_vertical"
                android:text="Invent."
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <include
            android:id="@+id/layerforcontent"
            layout="@layout/forcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/perenthost" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/awaits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base"
        android:visibility="gone">


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
