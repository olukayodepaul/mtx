<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="0.3dp">

        <RelativeLayout
            android:id="@+id/perent_hosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_skuss"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Total"
                android:layout_toStartOf="@+id/mt_inventorys"
                android:lines="2"
                android:fontFamily="@font/roboto_regular"
                android:textSize="13sp"
                android:textColor="@color/bg_black"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingRight="5dp"
                 />

            <TextView
                android:id="@+id/mt_amounts"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"
                android:lines="2"
                android:layout_alignParentEnd="true"
                android:gravity="fill_vertical"
                android:text="1,000,000"
                android:textColor="@color/bg_black"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat"/>

            <TextView
                android:id="@+id/mt_orders"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"
                android:lines="2"
                android:layout_toStartOf="@+id/mt_amounts"
                android:gravity="fill_vertical"
                android:text="40.0"
                android:textColor="@color/bg_black"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat"/>

            <TextView
                android:id="@+id/mt_pricings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"
                android:lines="2"
                android:layout_toStartOf="@+id/mt_orders"
                android:gravity="fill_vertical"
                android:text="50"
                android:textColor="@color/bg_black"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat"/>

            <TextView
                android:id="@+id/mt_inventorys"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"
                android:lines="2"
                android:layout_toStartOf="@+id/mt_pricings"
                android:gravity="fill_vertical"
                android:text="10.9"
                android:textColor="@color/bg_black"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>